<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ver_un_bus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ericmatias.centralautobuses.VerUnBusActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left">

            <ImageButton
                android:id="@+id/btnAtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="0"
                app:srcCompat="?attr/actionModeCloseDrawable" />
        </TableRow>

        <Space
            android:id="@+id/space4"
            android:layout_width="match_parent"
            android:layout_height="90dp" />


        <TextView
            android:id="@+id/selMatricula"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Selecciona una matricula *"
            android:textColor="#111"
            android:textStyle="bold" />

        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal"
                android:spinnerMode="dialog" />
        </TableRow>

        <TextView
            android:id="@+id/errorMatricula"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Matricula obligatoria!"
            android:textColor="#FF0000"
            android:visibility="invisible"/>

        <Space
            android:id="@+id/space3"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnIniciarMapa"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:text="@string/textoBtn3" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="right">

            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/informacion" />
        </TableRow>
    </TableLayout>
</LinearLayout>
